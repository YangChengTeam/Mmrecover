<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/gray_bk3">

    <TextView
        android:id="@+id/tv_voice_time"
        android:layout_width="fill_parent"
        android:layout_height="30.0dip"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_word3"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12.0sp" />

    <ImageView
        android:id="@+id/im_select"
        android:layout_width="17.0dip"
        android:layout_height="17.0dip"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4.0dip"
        android:layout_marginRight="4.0dip"
        android:scaleType="fitXY"
        android:src="@mipmap/image_select"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/im_image"
        android:layout_width="43.0dip"
        android:layout_height="43.0dip"
        android:layout_centerInParent="true"
        android:layout_marginLeft="21.0dip"
        android:layout_marginTop="21.0dip"
        android:layout_marginRight="21.0dip"
        android:layout_marginBottom="21.0dip"
        android:scaleType="fitXY"
        android:src="@mipmap/play" />
</RelativeLayout>