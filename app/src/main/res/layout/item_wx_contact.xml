<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <com.recover.wechat.app.customView.FilletImageView
        android:id="@id/im_head"
        android:layout_width="49.0dip"
        android:layout_height="49.0dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10.0dip"
        android:scaleType="fitXY"
        android:src="@mipmap/user_head"
       />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16.0dip"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="name"
            android:textColor="@color/black_word"
            android:textSize="15.0sp" />

        <TextView
            android:id="@id/tv_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:ellipsize="end"
            android:lines="1"
            android:text="你已添加金贝贝"
            android:textColor="@color/gray_word2"
            android:textSize="13.0sp" />
    </LinearLayout>

    <TextView
        android:id="@id/tv_time"
        android:layout_width="80.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:gravity="center"
        android:textColor="@color/gray_word2"
        android:textSize="12.0sp" />
</LinearLayout>